<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.staff.ReservationsPanel">

    <padding>
        <Insets bottom="18" left="18" right="18" top="18" />
    </padding>

    <top>
        <VBox spacing="14" BorderPane.alignment="CENTER">
            <VBox spacing="4">
                <Label styleClass="card-title" text="Reservations Management" />
                <Label style="-fx-text-fill: #64748b;" text="View and manage daily reservations" />
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 1);">
                
                <Label styleClass="field-label" text="Search:" />
                <TextField fx:id="txtSearch" prefWidth="200" promptText="Name, Code or ID..." styleClass="field-input" />
                
                <Region prefWidth="10" /> <Label styleClass="field-label" text="Date:" />
                <DatePicker fx:id="dateFilter" onAction="#onDateChanged" prefWidth="140" />
                <Button fx:id="btnRefresh" onAction="#btnRefresh" styleClass="wl-btn" text="âŸ³" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnNewReservation" onAction="#btnNewReservation" styleClass="btn-primary" text="+ New Reservation" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="reservationsTable" style="-fx-background-radius: 8; -fx-border-radius: 8;" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="90" text="Date" />
                <TableColumn fx:id="colTime" prefWidth="70" text="Time" />
                <TableColumn fx:id="colOrderId" prefWidth="70" text="ID" />
                <TableColumn fx:id="colCustomerType" prefWidth="90" text="Type" />
                <TableColumn fx:id="colConfirm" prefWidth="100" text="Code" />
                <TableColumn fx:id="colDiners" prefWidth="60" text="Pax" />
                <TableColumn fx:id="colTable" prefWidth="70" text="Table #" />
                <TableColumn fx:id="colStatus" prefWidth="110" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets top="14" />
            </BorderPane.margin>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="14" style="-fx-padding: 14 0 0 0;" BorderPane.alignment="CENTER">
            <Button fx:id="btnCancelRes" onAction="#btnCancelRes" styleClass="wl-btn-remove" text="Cancel Reservation" />
            <Button fx:id="btnMarkSeated" onAction="#btnMarkSeated" styleClass="btn-primary" text="Seat Customer" />
        </HBox>
    </bottom>
   <stylesheets>
      <URL value="@../../css/staff/clientStaffDashboardStyles.css" />
      <URL value="@../../css/staff/ReservationsPanelStyles.css" />
      <URL value="@../../css/staff/WaitingListPanelStyles.css" />
      <URL value="@../../css/clientNewReservationStyles.css" />
   </stylesheets>

</BorderPane>
