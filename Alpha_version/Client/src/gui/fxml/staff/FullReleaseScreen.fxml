<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="720" prefWidth="1280" stylesheets="@../../css/staff/clientEmployeeLoginStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.logic.staff.FullReleaseController">
    <BorderPane prefHeight="200.0" prefWidth="200.0" styleClass="background">
        <top>
            <BorderPane>
                <left>
                    <Button fx:id="btnBack" mnemonicParsing="false" onAction="#btnBack" styleClass="nav-back" text="Back">
                        <graphic>
                            <ImageView fitHeight="14.0" fitWidth="7.0">
                                <image>
                                    <Image url="@../../../resources/icons/backIcon.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </left>
            </BorderPane>
        </top>
        <center>
            <VBox alignment="CENTER" prefHeight="639.0" spacing="25" styleClass="login-card" BorderPane.alignment="CENTER">
                <StackPane prefHeight="80.0" prefWidth="80.0">
                    <styleClass>
                        <String fx:value="icon-circle" />
                        <String fx:value="icon" />
                    </styleClass>
                    <children>
                        <ImageView fitHeight="42.0" fitWidth="42.0">
                            <image>
                                <Image url="@../../../resources/icons/loginlock.png" />
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
                <VBox alignment="CENTER" spacing="10">
                    <Label styleClass="title" text="Coming Soon" />
                    <Label styleClass="subtitle" text="This feature is locked." />
                </VBox>
                <Label styleClass="info-text" text="This content will be available in the Full Release version of Bistro Management Portal." textAlignment="CENTER" wrapText="true" maxWidth="320"/>
                <Button fx:id="btnOk" onAction="#btnBack" prefHeight="48.0" prefWidth="221.0" styleClass="btn-primary" text="Got it" />
            </VBox>
        </center>
        <bottom>
            <BorderPane BorderPane.alignment="CENTER">
                <left>
                    <HBox alignment="BOTTOM_LEFT">
                        <children>
                            <Label styleClass="footer-label" text="© 2025 Bistro · All rights reserved · v1.0.0" textFill="WHITE" />
                        </children>
                        <padding>
                            <Insets bottom="16" left="24" right="0" top="0" />
                        </padding>
                    </HBox>
                </left>
            </BorderPane>
        </bottom>

    </BorderPane>
</StackPane>